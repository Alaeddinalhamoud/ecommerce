@model ecommerce.FrontEnd.Models.PayTabsTransactionResponse
@{
    ViewData["Title"] = "Payment Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--error section area start-->
<div class="error_section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="error_form mb-4">
                    <i class="fa fa-shopping-cart fa-3x yellow"></i>
                    <h2>Thank you for your order</h2>
                    @if (Model.respMessage.Equals("Authorised"))
                    {
                        <h3>Your payment has been submitted successfully</h3>
                        <p class="text-warning">Your Order number# @Model.cartId</p>
                        <p class="text-danger">Your invoice number# @Model.tranRef</p>
                        <p class="text-warning">Your payment will be processed within 5 minutes.</p>
                    }
                    else
                    {
                        <h3>Somethings goes wrong with your payment.</h3>
                        <p class="text-warning">Your Order number# @Model.cartId</p>
                        <p class="text-warning">Your invoice number# @Model.tranRef</p>
                        <p class="text-danger">Error: @Model.respMessage</p>
                        <p class="text-warning">Please, contact the support team.</p>
                    }
                    <a href="/">Back to home page</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!--error section area end-->