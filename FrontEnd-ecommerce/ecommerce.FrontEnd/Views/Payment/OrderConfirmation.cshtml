@model ecommerce.Data.POJO
@{
    ViewData["Title"] = "Order Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--error section area start-->
<div class="error_section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="error_form mb-4">
                    <i class="fa fa-shopping-cart fa-3x yellow"></i>

                    <h2>Thank you for your order</h2> 
                    <h3>Your Order Number# @Model?.message.ToString()</h3>
                    <a href="/">Back to home page</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!--error section area end-->