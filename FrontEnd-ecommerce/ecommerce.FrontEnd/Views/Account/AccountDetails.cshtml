@model ecommerce.FrontEnd.Models.MVApplicationUser
@{
    ViewData["Title"] = "Account Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var page = "Account Details";
}
<!-- my account start  -->
<section class="main_content_area">
    <div class="container">

        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    <partial name="_MyAccountNavtab" model="page" />
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div id="account-details">
                            <h3>Account details </h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form asp-action="AccountDetails" asp-controller="Account"
                                              data-ajax="true"
                                              data-ajax-method="POST"
                                              data-ajax-complete="onComplete"
                                              data-ajax-success="onSuccess"
                                              data-ajax-failure="onFailed"
                                              data-ajax-mode="replace"
                                              data-ajax-update="#myAccount-msg"
                                              data-ajax-loading="#spinner-MyAccount">
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                            <input type="text" asp-for="Id" hidden />
                                            <label>Full Name</label>
                                            <input type="text" asp-for="name" required>
                                            <span asp-validation-for="name" class="text-danger"></span><br/>
                                            <label>User Name</label>
                                            <input type="text" asp-for="UserName" readonly>
                                            <span asp-validation-for="UserName" class="text-danger"></span><br />
                                            <label>Email</label>
                                            @*<input type="email" asp-for="Email" required>
                                            <span asp-validation-for="Email" class="text-danger"></span><br />*@
                                            <label>Mobile Number</label>
                                            <input type="text" asp-for="PhoneNumber">
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span><br />
                                            <label>Birth Date</label>
                                            <input type="date"  asp-for="dOB" value="@Model?.dOB.ToString("yyyy-MM-dd")" asp-format="{0:yyyy-MM-ddTHH:mm}" required>
                                            <span asp-validation-for="dOB" class="text-danger"></span><br/>
                                            <label>Gender</label>
                                            <select asp-for="gender" required>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                                <option value="NA">NA</option>
                                            </select>
                                            <span asp-validation-for="gender" class="text-danger"></span><br />
                                            <div class="save_button primary_btn default_button">
                                                <button type="submit">
                                                    Update
                                                    <span id="spinner-MyAccount" style="display:none;">
                                                        <i class="fa fa-spinner fa-spin yellow"></i>
                                                    </span>
                                                </button>
                                            </div>
                                        </form>
                                        <div id="myAccount-msg" class="text-center"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- my account end   -->



<script type="text/javascript">

    var onComplete = function () {

    };
    var onSuccess = function (context) {

    }
    var onFailed = function (context) {
        alert("Failed submitting.");
    };
</script>