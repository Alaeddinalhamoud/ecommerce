@model ecommerce.Data.Alert

@{ 
    if (Model.isEnabled)
    {
        <div class="border border-warning text-warning my-3 p-2">
            <h4><span class="fa fa-warning pr-1"></span><strong>@Model?.title</strong></h4>
            <p>@Model?.body <a class="text-dark pl-1" asp-controller="Account" asp-action="Index">Click here</a></p>
        </div>
    }  
}