@model ecommerce.Data.Setting
@{
    var logo = String.IsNullOrEmpty(Model?.logo) ? "/assets/img/logo/logo.png" : Model?.logo;
}

<div class="logo" itemscope itemtype="http://schema.org/BusinessType">
    <span class="sr-only" itemprop="name">@Model.websiteName</span>
    <a itemprop="https://Example.com" asp-action="Index" asp-controller="home">
        <img itemprop="logo" class="img-fluid" src="@logo" alt="Logo">
    </a>
    <span class="sr-only" itemprop="description">@Model.description
</span>
</div>

@if (Model != null && Model.enableMaintenance)
{
    <div class="corner-ribbon top-left sticky orange shadow">Maintenance Mode</div>
    <div class="newletter-popup">
        <div id="boxes" class="newletter-container">
            <div id="dialog" class="window">
                <div class="box">
                    <img class="img-fluid imgsize-176 mb-2" src="@logo" />
                    <div class="newletter-title">
                        <h2>&mdash; Maintenance &mdash;</h2>
                    </div>
                    <div class="box-content newleter-content">
                        <h1>We&rsquo;ll be back soon!</h1>
                        <div>
                            <p> Sorry for the inconvenience but we&rsquo;re performing some maintenance at the moment. </p>
                            <p>
                                If you need to you can always <a class="text-primary" href="mailto:@Model?.helpDeskEmail">contact us</a>, otherwise we&rsquo;ll be back online shortly!
                            </p>
                            <p>&mdash; @Model?.websiteName Support Team</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}