@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<!--error section area start-->
<div class="error_section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="error_form py-2">
                    <h1>404</h1>
                    <h2>Opps! PAGE NOT BE FOUND</h2>
                    <p>Sorry but the page you are looking for does not exist, have been<br> removed, name changed or is temporarily unavailable.</p>
                    <div>
                        <partial name="_StatusMessage" model='TempData.Peek("StatusMessage")' />
                    </div>
                    @if (Model.ShowRequestId)
                    {
                        <p>
                            <code>@Model.RequestId</code>
                        </p>
                    }
                    <a href="/">Back to home page</a>
                </div>
            </div>
        </div>
    </div>
</div>
@if(Model.ShowRequestId)
{
    <div class="d-flex mb-2 justify-content-center">
        <div>
            <form asp-action="SendErrorEmail" asp-controller="Home" method="post">
                <input asp-for="Token" type="text" class="googlerecaptchatoken" required hidden>
                <input asp-for="RequestId" type="text" value="@Model.RequestId" required hidden>
                <button class="button" type="submit">
                    <span class="spinner-googleReCaptcha">
                        <span class="fa fa-spinner fa-spin fa-2x"></span>
                    </span>
                    <span class="Captipn-googleReCaptcha lnr lnr-envelope d-none">
                         Report The glitch.
                    </span>
                </button>
            </form>
        </div>
    </div>
}
<!--error section area end-->