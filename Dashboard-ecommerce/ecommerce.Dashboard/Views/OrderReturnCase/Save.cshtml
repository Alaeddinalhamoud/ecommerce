@model ecommerce.Dashboard.Models.MVOrderReturnCase
@{
    var oprationName = Model?.id == 0 ? "Add" : "Update";
    ViewData["Title"] = $"{oprationName} Order Return Case";
}

<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-6 col-md-6">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">@oprationName Order Return Case</h1>
                                </div>
                                <form class="user" asp-action="Save" asp-controller="OrderReturnCase" method="post">
                                    <input asp-for="id" type="text" class="form-control form-control-user" aria-describedby="id" hidden>
                                    <input asp-for="orderId" type="text" class="form-control form-control-user" aria-describedby="orderId" hidden>
                                    <input asp-for="email" type="text" class="form-control form-control-user" aria-describedby="email" hidden>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="reasonId" class="control-label"></label>
                                        <select class="custom-control custom-select-lg" asp-for="reasonId" asp-items="Model.reasons" required disabled>
                                            <option value="">-- Select --</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="customerNote" class="control-label"></label>
                                        <input asp-for="customerNote" type="text" class="form-control form-control-user"
                                               aria-describedby="Brand name" placeholder="customer Note" disabled>
                                        <span asp-validation-for="customerNote" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="status" class="control-label"></label>
                                        <select class="custom-control custom-select-lg" asp-for="status" required>
                                            <option value="Open">Open</option>
                                            <option value="Pending">Pending</option>
                                            <option value="Closed">Closed</option>
                                            <option value="Returned">Returned</option>
                                        </select>
                                        <span asp-validation-for="status" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="messageToCustomer" class="control-label"></label>
                                        <textarea data-val="true"
                                                  data-val-maxlength="The field Description must be a string or array type with a maximum length of &#x27;1024&#x27;."
                                                  data-val-maxlength-max="1024"
                                                  data-val-minlength="The field Description must be a string or array type with a minimum length of &#x27;5&#x27;."
                                                  data-val-minlength-min="5" asp-for="messageToCustomer" type="text" class="form-control form-control-user"
                                                  aria-describedby="messageToCustomerContent" placeholder="Message To the Customer">
                                         </textarea>
                                        <span asp-validation-for="messageToCustomer" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="actionsToSolve" class="control-label"></label>
                                        <textarea data-val="true"
                                                  data-val-maxlength="The field Description must be a string or array type with a maximum length of &#x27;1024&#x27;."
                                                  data-val-maxlength-max="1024"
                                                  data-val-minlength="The field Description must be a string or array type with a minimum length of &#x27;5&#x27;."
                                                  data-val-minlength-min="5" asp-for="actionsToSolve" type="text" class="form-control form-control-user"
                                                  aria-describedby="actionsToSolveContent" placeholder="Actions To Solve the issue">
                                         </textarea>
                                        <span asp-validation-for="actionsToSolve" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="mr-3">Send Email to the customer?</label>
                                        <label class="switch">
                                            <input type="checkbox" asp-for="sendEmail">
                                            <span class="slider round"></span>
                                        </label>
                                    </div>
                                    <button class="btn btn-primary btn-user btn-block" type="submit">
                                        Save  <i class="fas fa-save fa-lg text-white-50"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



