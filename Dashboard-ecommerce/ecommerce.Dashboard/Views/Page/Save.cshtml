@model ecommerce.Data.Page
@{
    var oprationName = Model?.id == 0 ? "Add" : "Update";
    ViewData["Title"] = $"{oprationName} Page";
}

<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-12 col-lg-12 col-md-12">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">@oprationName Page</h1>
                                </div>
                                <form class="user" asp-action="Save" asp-controller="Page" method="post" onsubmit="handleSubmit();">
                                    <input asp-for="id" type="text" class="form-control form-control-user" aria-describedby="id" hidden>
                                    <input id="rteContent" asp-for="content" type="text" class="form-control form-control-user" aria-describedby="content" hidden>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="nav" class="control-label">Name/Title</label>
                                        <input asp-for="name" type="text" class="form-control form-control-user w-50Per"
                                               aria-describedby="name" placeholder="Name">
                                        <span asp-validation-for="name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="nav" class="control-label">Chooes a Nav</label>
                                        <select class="custom-control custom-select-lg w-50Per" asp-for="nav" required>
                                            <option value="Main">Main</option>
                                            <option value="Information">Information</option>
                                            <option value="Extras">Extras</option>
                                        </select>
                                        <span asp-validation-for="nav" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="mr-3">Is the Page Published?</label>
                                        <label class="switch">
                                            <input type="checkbox" asp-for="published">
                                            <span class="slider round"></span>
                                        </label>
                                    </div>
                                    <div class="form-group">
                                        <label class="mr-3">Is the Page Private<code class="text-danger">(User only)</code>?</label>
                                        <label class="switch">
                                            <input type="checkbox" asp-for="isPrivate">
                                            <span class="slider round"></span>
                                        </label>
                                    </div>
                                    <div id="jquillRTE" class="mb-5 jquillHeight">
                                        @Html.Raw(Model.content)
                                    </div>
                                    <button class="btn btn-primary btn-user btn-block w-50Per" type="submit">
                                        Save  <i class="fas fa-save fa-lg text-white-50"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
    <script src="~/js/JQuillConfig.js"></script>
}
