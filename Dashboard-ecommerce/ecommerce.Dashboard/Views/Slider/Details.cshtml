@model ecommerce.Data.Slider
@{
    ViewData["Title"] = "Slider Details";
}

<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-lg-block">
                            <img src="@Model.imagePath" class="img-thumbnail img-fluid" />
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-left">
                                    <p class="h4 text-gray-900 mb-2"><strong>Name:</strong> @Model?.name</p>
                                    <p class="h4 text-gray-900 mb-2"><strong>Description:</strong> @Model?.description</p>
                                    <p class="h4 text-gray-900 mb-2"><strong>Enabled: </strong>@(Model.isEnabled.Equals(true) ? Html.Raw("&#9989;") : Html.Raw("&#x26D4;"))</p>
                                    <p class="h4 text-gray-900 mb-2"><strong>Created date:</strong> @Model?.createDate.ToShortDateString()</p>
                                </div>
                                <hr>
                                <a asp-action="Index" asp-controller="Slider" class="btn btn-secondary btn-icon-split mb-2">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-undo"></i>
                                    </span>
                                    <span class="text">Back Slide lists</span>
                                </a>
                                <a asp-action="Edit" asp-controller="Slider" asp-route-id="@Model?.id" class="btn btn-warning btn-icon-split mb-2">
                                    <span class="icon text-white-50">
                                        <i class="far fa-edit"></i>
                                    </span>
                                    <span class="text">Edit</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>