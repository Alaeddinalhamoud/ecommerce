@model ecommerce.Dashboard.Models.MvProductSpecificationList

@{
    var oprationName = Model?.MvProductSpecifications[0]?.id == 0 ? "Add" : "Update";
    ViewData["Title"] = $"{oprationName} Product Specifications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-12 col-lg-12 col-md-12">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">@oprationName Product Specifications</h1>
                                </div>
                                <form class="user" asp-action="SaveRange" asp-controller="ProductSpecification" method="post">
                                    <input asp-for="@Model.MvProductSpecifications[0].id" type="text" class="form-control form-control-user" aria-describedby="id" hidden>
                                    <input asp-for="@Model.MvProductSpecifications[0].productId" type="text" class="form-control form-control-user" aria-describedby="productId" hidden>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <table id="tblProductSpecification" class="table table-bordered table-hover table-responsive" cellpadding="0" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Lable Name</th>
                                                <th>Value</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                        <tfoot>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td>
                                                    <button type="button" onclick="AddNewElement();" class="btn btn-success">
                                                        <i class="fas fa-plus-circle"></i> Add New Line
                                                    </button>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    <div class="form-group col-lg-2">
                                        <button id="btnAdd" class="btn btn-primary btn-user btn-block d-none" type="submit">
                                            @oprationName  <i class="fas fa-chevron-circle-right fa-lg text-white-50"></i>
                                        </button>
                                        <a id="btnDone" class="btn btn-primary btn-user btn-block" href="/Product/Details/@Model.MvProductSpecifications[0].productId">
                                            Done   <span class="fa fa-check-circle fa-lg text-white-50"></span>
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/ProductSpecificationAddNewInput/AddNewInput.js"></script>