@using Libraries.ecommerce.RazorHtmlEmails.Views.Emails.ResetPassword
@using Libraries.ecommerce.RazorHtmlEmails.Views.Shared
@model ResetPasswordEmailViewModel

@{
    ViewData["EmailTitle"] = "Reset Password!";
}

    <p>
        You recently requested to reset your password. Use the button below to reset it. This password reset is only valid for the next 24 hours.
    </p>

