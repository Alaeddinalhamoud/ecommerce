
@{
    ViewData["Title"] = "ResetPasswordConfirmation";
    if (!System.Diagnostics.Debugger.IsAttached)
    {
        <meta http-equiv="refresh" content="5; url=https://Example.com" />
    }
}

<div class="error_section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="error_form">
                    <span> <i class="fa fa-check-circle-o fa-4x mb-2"> </i></span>
                    <h3 class="header_middle">Reset Password Confirmation</h3>
                    <p>
                        Your password has been reset. Please <a asp-action="login" asp-controller="account">click here to log in</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
